.fw-container(data-bind=`
    style: {
      top: fwY,
      left: fwX,
      width: fwWidth,
      height: fwHeight,
      'z-index': 100 - windowOrder(),
    },
    event: { keydown: onKeyDown, focusin: () => $data.onFocusIn() }
  `)
  .title-bar(data-bind=`
    event: { mousedown: fwStartDrag },
    style: {cursor: fwDragging() ? 'grabbing' : 'grab' }
  `)
    button.close(data-bind="click: fwClose")
    .title(data-bind="text: fwTitle")
  .content(data-bind=`template: {
    name: fwTemplateName,
    data: $data,
    afterRender: () => $data.afterRender()
  }`)
